{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "lib": ["es2020", "esnext"],
        "sourceMap": true,
        "outDir": "out",
        "jsx": "react",
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}